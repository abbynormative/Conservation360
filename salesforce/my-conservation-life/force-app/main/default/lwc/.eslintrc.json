{
    "extends": [
        "@salesforce/eslint-config-lwc/recommended"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "valid-jsdoc": [
            1,
            {
                "requireReturn": false,
                "requireParamDescription": true,
                "requireReturnDescription": true
            }
        ]
    }
}